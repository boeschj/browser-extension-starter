{
  "name": "browser-extension-starter",
  "version": "1.0.0",
  "description": "A boilerplate template for React-based browser extensions!",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc",
    "build:chrome": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=chrome webpack --config webpack.prod.js",
    "build:firefox": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=firefox webpack --config webpack.prod.js",
    "dev:chrome": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=chrome webpack --config webpack.dev.js --watch",
    "dev:firefox": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=chrome webpack --config webpack.dev.js --watch"
  },
